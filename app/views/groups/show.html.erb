<div class="row bg-light">
  <div class="col-12">
    <h1><%= resource.name %></h1>

    <div class="alert alert-info" role="alert">
      <%= resource.visibility_icon %>

      <%= t resource.visibility, scope: 'group.show.visibility' %>
    </div>
  </div>

  <div class="col-8">
    <h3><%= t 'group.show.description' %></h3>

    <%= simple_format resource.description %>
  </div>

  <div class="col-4">
    <h3 class="text-center"><%= t 'group.show.members' %></h3>

    <div class="list-group mb-2">
      <div class="member-list">
        <% resource.users.each do |user| %>
          <div class="list-group-item member-list__item">
            <div class="d-flex flex-column">
              <%= user.name %>

              <small class="text-muted"><%= user.email %></small>
            </div>

            <%= link_to [resource, :member, id: user], method: :delete, class: 'btn btn-sm btn-danger' do %>
              <i class="fas fa-times"></i>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= link_to t('group.show.invite'), [:new, resource, :invite],
        class: 'list-group-item btn btn-outline-primary btn-sm btn-block' if policy(resource).edit? %>
    </div>
  </div>

  <div class="col-12">
    <%= link_to t('group.show.edit'), [:edit, resource], class: 'btn btn-default btn-block' if
      policy(resource).edit? %>
  </div>
</div>
