<div id="basic-tab" class="tab-pane fade show active">
  <div class="row">
    <div class="col-md-6">
      <%= f.input :memory_limit, wrapper: :input_group, append: 'kb', input_html: { value: 32768 } %>

      <%= f.input :time_limit, wrapper: :input_group, append: 'ms', input_html: { value: 100 } %>

      <%= f.input :real_time_limit, wrapper: :input_group, append: 'ms', input_html: { value: 5000 } %>
    </div>

    <div class="col-md-6">
      <%= f.input :checker_compiler_id, collection: Compiler.status_public, include_blank: false %>

      <%= f.input :checker_source %>
    </div>
  </div>
</div>
