<div class="row bg-light">
  <div class="col-xs-12">
    <h1><%= t 'problems.new.title' %></h1>
  </div>

  <div class="col-xs-12 col-md-6">
    <%= simple_form_for resource, remote: true, authenticity_token: true do |f| %>
      <%= f.hidden_field :channel_id, value: channel_id %>

      <%= f.input :archive, as: :file %>

      <%= f.submit class: 'btn btn-default' %>
    <% end %>
  </div>

  <div id="process-problem-archive-log" class="col-xs-12 col-md-6" data-channel-id="<%= channel_id %>"></div>
</div>
