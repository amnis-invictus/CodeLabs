<div class="bg-white" style="background-color: transparent;">
  <div class="section">
    <h2 class="section__title"><%= resource.caption %></h2>

    <%= simple_format resource.text, class: 'section__content' if resource.text.present? %>
  </div>

  <div class="section">
    <h3><%= t 'problems.show.technical_text' %></h3>

    <%= simple_format resource.technical_text, class: 'section__content' if resource.technical_text.present? %>
  </div>

  <%= content_tag :div, class: 'section' do %>
    <h3><%= t 'problems.show.examples' %></h3>

    <div class="row">
      <div class="col-md-6 col-xs-12">
        <h4><%= t 'problems.show.example_input' %></h4>
      </div>

      <div class="col-md-6 col-xs-12">
        <h4><%= t 'problems.show.example_output' %></h4>
      </div>
    </div>

    <% resource.examples.each do |example| %>
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <p class="problem-example"><%= example.input %></p>
        </div>

        <div class="col-md-6 col-xs-12">
          <p class="problem-example"><%= example.answer %></p>
        </div>
      </div>
    <% end %>
  <% end if resource.examples.any? %>

  <div class="section">
    <i class="fa fa-certificate" aria-hidden="true"></i>

    <ol class="tags">
      <% resource.tags.each do |tag| %>
        <li><%= link_to tag.name, [tag, :problems] %></li>
      <% end %>
    </ol>
  </div>

  <div class="section">
    <i class="far fa-address-book contact" aria-hidden="true"></i>

    <p class="author"><%= resource.author %></h4>
  </div>

  <%= content_tag :div, class: 'section' do %>
    <%= render 'submissions/form', parent: resource, resource: Submission.new %>
  <% end if current_user %>
</div>
