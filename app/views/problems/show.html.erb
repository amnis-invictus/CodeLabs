<div class="row bg-white">
  <div class="problem">

    <div class="row ">
        <div class="col-md-12">
            <h2><%= resource.caption %></h2>
            <p><%= resource.text&.html_safe %></p>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2><%= t 'problems.show.technical_text' %></h2>
            <p><%= resource.technical_text&.html_safe %></p>
            <hr />
        </div>
    </div>

    <% if resource.examples.count > 0 %>
      <div class="row">
        <div class="col-md-12">
          <h2><%= t 'problems.show.examples' %></h2>
          <div class="row indent-sm">
            <!--govnocode-->
              <div class="col-md-offset-1 col-md-5 part">
                <h3><%= t 'problems.show.example_input' %></h3>
                <% resource.examples.each do |example| %>
                  <p><%= example.input -%></p>
                <% end %>
              </div>
              <div class="col-md-5 part">
                <h3><%= t 'problems.show.example_output' %></h3>
                <% resource.examples.each do |example| %>
                  <p><%= example.answer -%></p>
                <% end %>
              </div>
            <!--govnocode end-->
          </div>
          <hr />
        </div>
      </div>
    <% end %>
    <div class="row indent-sm">
      <div class="col-md-12">
        <p>
          <i class="fa fa-certificate" aria-hidden="true"></i>
          <% resource.tags.each do |tag| %>
            <%= link_to (tag.name), [tag, :problems], class: 'tag' %>
          <% end %> 
        </p>
        <hr class="part_hr"/>
      </div>
    </div>
    <div class="row indent-sm">
        <div class="col-md-12">
            <p><i class="far fa-address-book" aria-hidden="true"></i><%= resource.author %></p>
            <% if current_user %>
              <hr class="part_hr"/>
            <% end %>
        </div>
    </div>
    <% if current_user %>
      <div class="row indent-sm">
        <div class="col-md-12">
          <%= render 'submissions/form', parent: resource, resource: Submission.new %>
        </div>
      </div>
    <% end %>

  </div>
</div>
