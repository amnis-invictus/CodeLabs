<tr>
  <td><%= f.input :num, wrapper: :table %></td>

  <td>
    <%= f.input :input, wrapper: :table_file %>

    <%= f.input :input_text, as: :text, wrapper: :table, wrapper_html: { class: :'d-none' } %>
  </td>

  <td>
    <%= f.input :answer, wrapper: :table_file %>

    <%= f.input :answer_text, as: :text, wrapper: :table, wrapper_html: { class: :'d-none' } %>
  </td>

  <td>
    <button type="button" class="btn btn-success" data-toggle="test-fields-swap"><i class="fas fa-sync"></i></button>
  </td>

  <td>
    <%= link_to_remove_association f, class: 'btn btn-danger' do %>
      <i class="fas fa-times"></i>
    <% end %>
  </td>
</tr>
