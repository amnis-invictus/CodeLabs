<% url = url_for submission if policy(submission).show? %>

<tr>
  <td><%= link_to submission.id, submission %></td>

  <td>
    <% if policy(submission.problem).show? %>
      <%= link_to submission.problem_caption, submission.problem %>
    <% else %>
      <%= submission.problem_caption %>
    <% end %>
  </td>

  <td><%= submission.user_name %></td>

  <td><%= submission.state %></td>
</tr>
