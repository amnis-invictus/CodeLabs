<tr>
  <td><%= invite.sender_name %></td>

  <td><%= invite.receiver_name %></td>

  <td><%= invite.status&.humanize %></td>

  <td><%= l invite.created_at, format: :long %></td>

  <td>
    <%= link_to [invite, :reject], method: :post, class: 'btn btn-sm btn-danger' do %>
      <i class="fas fa-times"></i>
    <% end if policy(Invite::Reject.new invite).create? %>
  </td>
</tr>
