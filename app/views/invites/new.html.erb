<div class="row bg-light">
  <div class="col-12">
    <h1><%= t 'invite.new.title' %></h1>
  </div>

  <div class="col-12">
    <%= simple_form_for [parent, resource] do |f| %>
      <%= f.association :receiver, as: :string,
        input_html: { id: nil, 'data-role': 'user-search', value: resource.decorate.receiver_name } %>

      <%= f.input_field :receiver_id, hidden: true %>

      <%= f.submit class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
